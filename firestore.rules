rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // 사용자는 자신의 데이터만 읽고 쓸 수 있음
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // 책 정보는 모든 인증된 사용자가 읽을 수 있음
    match /books/{bookId} {
      allow read: if request.auth != null;
      allow write: if false; // 관리자만 쓸 수 있도록 백엔드에서 처리
    }
    
    // 독서 진행 상황은 해당 사용자만 접근 가능
    match /reading_progress/{progressId} {
      allow read, write: if request.auth != null && 
        resource.data.userId == request.auth.uid;
    }
    
    // 리뷰는 인증된 사용자가 읽을 수 있고, 작성자만 수정 가능
    match /reviews/{reviewId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && 
        request.resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth != null && 
        resource.data.userId == request.auth.uid;
    }
    
    // 외부 리뷰는 읽기만 가능
    match /external_reviews/{reviewId} {
      allow read: if request.auth != null;
      allow write: if false; // 크롤링 시스템에서만 쓰기
    }
    
    // 사용자 선호도 데이터
    match /user_preferences/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}